<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:id="@+id/ItemBContainer"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_marginTop="6dp"
   android:layout_marginStart="8dp"
   android:layout_marginEnd="8dp"
   android:clipChildren="false"
   android:clipToPadding="false"
   android:paddingStart="10dp"
   android:paddingEnd="10dp"
   android:paddingBottom="10dp"
   android:paddingTop="8dp"
   android:background="@drawable/shape_section_background"
   android:elevation="4dp">

    <ImageView
        android:id="@+id/ItemBImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_section_background"
        android:backgroundTint="@color/bone_color_alt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:id="@+id/ItemBInnerContainer"
        app:layout_constraintBottom_toBottomOf="@id/ItemBImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ItemBImage"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ItemBInnerTextA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:singleLine="true"
            android:textAlignment="gravity"
            android:textColor="@color/text_color"
            tools:text="@string/lorem_ipsum" />

        <TextView
            android:id="@+id/ItemBInnerTextB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:singleLine="true"
            android:textAlignment="gravity"
            android:textColor="@color/text_color"
            tools:text="@string/lorem_ipsum" />

    </LinearLayout>
    <TextView
        android:id="@+id/ItemBOuterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="start"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:maxLines="3"
        android:textAlignment="gravity"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toBottomOf="@id/ItemBImage"
        tools:text="@string/lorem_ipsum" />
</androidx.constraintlayout.widget.ConstraintLayout>