<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ItemBContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/shape_section_background"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="4dp"
    android:paddingStart="10dp"
    android:paddingTop="8dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/ItemBImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_section_background"
        android:backgroundTint="@color/bone_color_alt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/ItemBInnerContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/ItemBImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ItemBImage"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ItemBInnerTextA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:singleLine="true"
            android:textAlignment="gravity"
            android:textColor="@color/text_color"
            tools:text="@string/lorem_ipsum" />

        <TextView
            android:id="@+id/ItemBInnerTextB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:singleLine="true"
            android:textAlignment="gravity"
            android:textColor="@color/text_color"
            android:text="Some static random text"
            tools:text="@string/lorem_ipsum" />

    </LinearLayout>

    <TextView
        android:id="@+id/ItemBOuterTextA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:padding="2dp"
        android:textAlignment="gravity"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toBottomOf="@id/ItemBImage"
        tools:text="@string/lorem_ipsum" />

    <TextView
        android:id="@+id/ItemBOuterTextB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:padding="2dp"
        android:textAlignment="gravity"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toBottomOf="@id/ItemBOuterTextA"
        tools:text="@string/lorem_ipsum" />
</androidx.constraintlayout.widget.ConstraintLayout>